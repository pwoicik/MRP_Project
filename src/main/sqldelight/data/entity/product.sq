import domain.model.MutableProductTreeNode;

CREATE TABLE productTree (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    node TEXT AS MutableProductTreeNode NOT NULL
);

deleteProduct:
DELETE
FROM productTree
WHERE id = ?;

getAllProducts:
SELECT *
FROM productTree
ORDER BY id DESC;

getProduct:
SELECT *
FROM productTree
WHERE id = ?;

insertProduct:
INSERT
INTO productTree(node)
VALUES (?);

updateProduct:
INSERT OR REPLACE
INTO productTree
VALUES ?;
